<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/header.ejs") %> 



<body>
    <%- include("./partials/navbar.ejs") %> 
    
    
    <div>
    
          <div>
            <h1 class="title text-center"><%= blog.title %></h1>
          </div>
               
               <div class="container-fluid">
                <h5 class="body bg-dark text-white p-2"><%= blog.body%></h5>
               

               </div>     
               <button type="button" data-doc="<%= blog._id %>"class="btn btn-danger text-black m-3">Delete</button>

            <script>
                const trashcan = document.querySelector("button.delete")
                trashcan.addEventListener("click",(e)=> {
                    const endpoint = `/blogs/${trashcan.dataset.doc}`

                    fetch(endpoint,{
                        method:"DELETE",
                    }).then((response)=>response.json())
                    .then((data)=> window.location.href=data.redirect)
                    .catch((err)=> console.log(err))
                })
            </script>
     
    
    
    
   </div>

</body>
<%- include("./partials/footer.ejs") %> 
</html>